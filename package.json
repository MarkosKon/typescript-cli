{
  "name": "typescript-cli",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "bin": {
    "typescript-cli": "dist/src/cli.js"
  },
  "scripts": {
    "prepublish": "tsc",
    "build": "tsc",
    "test": "npm-run-all build test:run",
    "test:run": "node dist/test/test.js",
    "lint": "npm-run-all --parallel build lint:js lint:rest",
    "lint:js": "eslint --ext=js,ts src",
    "lint:rest": "prettier --check \"**/*.{json,yml,md}\"",
    "format": "npm-run-all --parallel format:js format:rest",
    "format:js": "yarn lint:js --fix",
    "format:rest": "prettier --write \"**/*.{json,yml,md}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "bash -c tsc",
      "eslint --fix"
    ],
    "*.{md,json,yml,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "husky": "^4.*.*",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2"
  }
}
